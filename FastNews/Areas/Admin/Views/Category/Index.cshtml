@model PagedList.IPagedList<Models.EF.Category>

@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header {
    Danh sách thể loại
}

<div class="panel-body">
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Danh sách thể loại</h6>
                </div>
                <div class="card-body">

                    @using (Html.BeginForm("Index", "Category", FormMethod.Get))
                    {
                        <div class="row">
                            <div class="col-lg-12">

                                <input type="text" value="@ViewBag.SearchString" name="searchString" placeholder="Nhập tên thể loại..." />
                                <button type="submit">Tìm Kiếm</button>

                            </div>
                        </div>
                    }
                    <br />
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>CategoryName</th>
                                    <th>MetaTitle</th>
                                    <th>DisplayOrder</th>
                                    <th>Target</th>
                                    <th>ShowOnHome</th>
                                    <th>ShowOnMenu</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr id="row_@item.CategoryID">
                                    <td>
                                        <a href="/Admin/Category/Edit/@item.CategoryID">Sửa</a>
                                        |
                                        @Ajax.ActionLink("Xóa", "Delete", new { @id = item.CategoryID }, new AjaxOptions
                                   {
                                       Confirm = "Bạn có muốn xóa bản ghi này?",
                                       OnComplete = "$('#row_" + @item.CategoryID + "').remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </td>
                                    <td>@item.CategoryName</td>
                                    <td>@item.MetaTitle</td>
                                    <td>@item.DisplayOrder</td>
                                    <td>@item.Target</td>
                                    <td>@item.ShowOnHome</td>
                                    <td>@item.ShowOnMenu</td>
                                </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="7">
                                        <a href="/Admin/Category/Create">Thêm Mới</a>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                        @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page, @searchString = @ViewBag.SearchString }))
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>